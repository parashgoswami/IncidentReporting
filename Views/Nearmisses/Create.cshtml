@model IncidentReporting.Models.Nearmiss

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<h4>Create Nearmiss Incidents</h4>

@{
    var data = ViewBag.ProjectName;
    var RequestqID = ViewBag.ReqId;
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequestId" class="control-label"> Incident Year</label>
                <input asp-for="RequestId" class="form-control" value="@RequestqID"  />
                <span asp-validation-for="RequestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project" class="control-label"></label>
                <input asp-for="Project" class="form-control" value="@data" readonly/>
                <span asp-validation-for="Project" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label"></label>


              @*  <input asp-for="Period" class="form-control" />*@
                <select asp-for="Period" class="control-label">
                    <option value=""> Please select</option>
                    <option value="January">January</option>
                    <option value="February"> February</option>
                    <option value="March">March</option>
                    <option value="April">April</option>
                    <option value="May">May</option>
                    <option value="June">June</option>
                    <option value="July">July</option>
                    <option value="August">August</option>
                    <option value="September">September</option>
                    <option value="October">October</option>
                    <option value="Novenber">Novenber</option>
                    <option value="December">December</option>



                </select>


                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationIncident" class="control-label"></label>
                <input asp-for="LocationIncident" class="form-control" />
                <span asp-validation-for="LocationIncident" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentDiv" class="control-label"></label>
                <input asp-for="DepartmentDiv" class="form-control" />
                <span asp-validation-for="DepartmentDiv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EyeWitness" class="control-label"></label>
                <input asp-for="EyeWitness" class="form-control" />
                <span asp-validation-for="EyeWitness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Escape" class="control-label"></label>
                <input asp-for="Escape" class="form-control" />
                <span asp-validation-for="Escape" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrvMeasure" class="control-label"></label>
                <input asp-for="PrvMeasure" class="form-control" />
                <span asp-validation-for="PrvMeasure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remark" class="control-label"></label>
                <input asp-for="Remark" class="form-control" />
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="StatusNearmiss" type="hidden" class="form-control" value="New" />

            </div>
            <div class="form-group">

                <input asp-for="RemarkHod" type="hidden" class="form-control" value="New" />

            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" value="0" readonly/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
